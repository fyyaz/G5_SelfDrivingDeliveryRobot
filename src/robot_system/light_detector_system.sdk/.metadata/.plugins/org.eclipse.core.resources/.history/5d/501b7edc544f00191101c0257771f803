    	print("M1 Set Dir 1, Speed 25, Enable\n\r");
    	HB3_setDir(&pmodHB3_1, 0);
    	HB3_setMotorSpeed(&pmodHB3_1, 0.0);
    	HB3_motorEnable(&pmodHB3_1);

    	print("Sleep 5s\n");
    	sleep(5);

    	print("Disable\n\r");
    	    HB3_motorDisable(&pmodHB3_0);
